AddRightForm:
<AddRightForm>:
	orientation: "horizontal"
	reddit_pw_input: reddit_pw_box
	reddit_un_input: reddit_un_box
	email_un_input: email_un_box
	email_pw_input: email_pw_box
	email_serverAddress_input: email_serverAddress_box
	email_toAddress_input: email_toAddress_box

	BoxLayout:
		size_hint_x: None

		Label:
			text: "Reddit Credentials"
			

		Label:
			text: "Username"
			

		TextInput:
			id: reddit_un_box
			

		Label:
			text: "Password"
			

		TextInput:
			id: reddit_pw_box
			

		Label:
			text: "Email Credentials"
			

		Label:
			text: "Username"
			

		TextInput:
			id: email_un_box
			

		Label:
			text: "Password"
			

		TextInput:
			id: email_pw_box
			

		Label:
			text: "SMTP Server Address"
			

		TextInput:
			id: email_serverAddress_box
			

		Label:
			text: "To Email Address"
			

		TextInput:
			id: email_toAddress_box
			
